    <script>
        // $('#modalpoliticas').modal('');
        $('.collapse').collapse('show');

        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myList li").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });

    </script>
    <script>
        //DETECTAR TAMAÑO Y TIPO DE NAVEGADOR
        $(document).ready(function () {
            var width = screen.width;
            var height = screen.height;

            /* Definimos el estilo */
            var style = document.createElement("link");
            style.rel = "stylesheet";
            style.type = "text/css";

            //ESTILO SEGUN RESOLUCIÓN
            if ((width >= 1920)) {
                //alert('xxl');
                style.href = "/css/estilosxxl.css";
            } else if ((width >= 1360) && (width < 1920)) {
                //alert('xl');
                style.href = "/css/estilosxl.css";
            } else if ((width >= 1024) && (width < 1360)) {
                //alert('lg');
                style.href = "/css/estilosxl.css";

            } else if ((width >= 768) && (width < 1024)) {
                //alert('md');
                style.href = "/css/estilosmd.css";
            } else if ((width < 768)) {
                //alert('sm');
                style.href = "/css/estilossm.css";
            }
            //Añadimos la hoja de estilo a la cabecera
            document.head.appendChild(style);
        });

    </script>

    @RenderSection("Scripts", required: false)
